{
  "redirects": [
    { "source": "/index.html", "destination": "/", "permanent": true },
    { "source": "/index-safe.html", "destination": "/", "permanent": true },
    { "source": "/index-heavy.html", "destination": "/", "permanent": true },

    { "source": "/impressum", "destination": "/impressum.html", "permanent": true },
    { "source": "/konditionen", "destination": "/konditionen.html", "permanent": true },
    { "source": "/datenschutz", "destination": "/datenschutz.html", "permanent": true },

    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "dmdigitalenterprise.vercel.app" }],
      "destination": "https://www.dmdigitalenterprise.com/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=()" }
      ]
    }
  ]
}

